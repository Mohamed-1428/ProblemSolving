using System;
using System.Collections.Generic;
using System.Linq;

namespace lab
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine(sumNumberDigits(221));
        }
        static int sumNumberDigits(int number)
        {
            int result = 0;

            while (number > 0)
            {
                result += number % 10;
                number = number / 10;
            }

            return result;
        } 
    }
}
