using Lab.Bank.Views.ManageUsers;

namespace lab
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine(isNumberAppearsFirstOrLastElement(new int[] { 1, 2, 2, 3, 3, 4, 5, 6, 5, 7, 7, 7, 8, 8, 9 },25));
        }
        static bool isNumberAppearsFirstOrLastElement(int[] arr, int number) => arr[0] == number || arr[arr.Length-1] == number;
    }
}
