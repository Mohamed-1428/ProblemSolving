using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;

namespace lab
{
    class Program
    {
        static void Main()
        {
            Console.WriteLine("Hello: {0}", readFullUserName());
        }
        static string readFullUserName()
        {
            Console.Write("Please Enter you Full Name:");
            return Console.ReadLine();
        } 
    }
}
