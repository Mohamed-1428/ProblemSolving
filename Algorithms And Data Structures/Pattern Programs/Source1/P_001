using System;
using System.Collections.Generic;
using System.IO;
using System.Linq;

namespace lab
{
    class Program
    {
        static void Main()
        {
            starPyramidPatterns_1();
        }
        static int readRowsNumber()
        {
            Console.Write("Enter a number to define the rows:");
            return int.Parse(Console.ReadLine());
        }
        static void starPyramidPatterns_1()
        {
            int rowsNumber = readRowsNumber();
            for(int i = 0; i < rowsNumber; i++)
            {
                for(int j = 0; j <= i; j++)
                {
                    Console.Write('*');
                }
                Console.WriteLine();
            }
            
        }
    }
}

