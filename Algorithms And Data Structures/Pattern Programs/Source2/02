using System;

class URI
{
    static void Main(string[] args)
    {
        p2(8);
    }
    static void p2(int rowsCount)
    {
        for (int i = 0; i < rowsCount; i++)
        {
            for (int j = 0; j <= i; j++)
                Console.Write('*');

            Console.WriteLine();
        }
    }
}
