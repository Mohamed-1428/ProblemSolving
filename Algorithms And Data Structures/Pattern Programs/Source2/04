using System;

class URI
{
    static void Main(string[] args)
    {
        p4(7);
    }
    static void p4(int rowsNumber)
    {
        for (int i = 0; i < rowsNumber; i++)
        {
            for (int j = rowsNumber; j >= 0; j--)
                if (j <= i)
                    Console.Write('*');
                else
                    Console.Write(' ');

            Console.WriteLine();
        }
    }
}
